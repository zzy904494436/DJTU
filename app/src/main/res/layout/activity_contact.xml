<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianfeng.mymac.djtu.activity_function.ContactActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/btn_back_contact"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@mipmap/searchbackbtn"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <Spinner
        android:id="@+id/spi_chooseDep"
        android:layout_width="match_parent"
        android:background="#e8e9e8"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="#e8e9e8"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="学院"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="办公室"
            android:textSize="20sp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系方式"
            android:textSize="20sp"
            android:gravity="center"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_blue_bright"
        />
    <ListView
        android:id="@+id/lv_show"
        android:layout_width="match_parent"
        android:dividerHeight="2dp"
        android:divider="@android:color/holo_blue_bright"
        android:layout_height="match_parent"/>
</LinearLayout>
